.screen-order-detail
  @import './cpts/infoLine/style.styl'
  display: flex
  flex-direction: column
  background: #f1f1f1
  padding: 12px
  height: 100vh
  box-sizing: border-box

  .order-detail-card
    display: flex
    flex-direction: column
    background: white
    border-radius: 4px
    padding-left: 12px
    padding-right: 12px

    .top-banner
      height: 200
      display: flex
      flex-direction: column
      justify-content: center
      align-items: center
      border-bottom-color: #f8f8f8
      border-bottom-width: 1px
      border-bottom-style: solid

      .header-title
        font-size: 40px
        font-weight: 400
        margin-top: 50px
        margin-bottom: 15px

      .status-bar
        padding: 5px 20px 5px 20px
        background: #1676FF
        color: white
        margin-bottom: 30px
        border-radius: 6px
  
    .customer-service
      height: 100px
      display: flex
      flex-direction: column
      justify-content: center
      align-items: center

      .tips
        color: #9c9c9c
        font-size: 13px
      
      .call-phone
        color: #1676FF    
        border-radius: 4px
        border-width: 1px
        border-style: solid
        border-color: #1676FF
        padding: 2px 12px 2px 12px
        padding 5px 30px
        font-weight: 400

  .info-line
    padding 15px 12px
    .front
      .title-content
        .title-text
          color #9c9c9c
          font-size 14px
      .content-text
        color #363636
    
    .backend
      .copy
        color #1676FF
        font-size: 14px
        font-weight: 400

