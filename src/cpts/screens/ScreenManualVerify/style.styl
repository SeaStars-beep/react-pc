.screen-manual-verify
  height 100vh
  background #F8F9FA
  overflow hidden
  .manual-verify-main
   width 100%
   padding 0 15px
   margin-top 180px
   display flex
   justify-content space-between
   box-sizing border-box
   align-items center
   .manual-verify-inp
       width 300px
       height 40px
       font-size 20px
       letter-spacing 2px
       border 0
       background transparent
   .manual-verify-icon
       width 50px
       height 30px
       background #ccc
       text-align center
       line-height 30px
       position relative
       .iconfont
         font-size 30px
         color #888
       ::after
         display block
         content ""
         border-top 15px solid transparent
         border-bottom 15px solid transparent
         border-right 15px solid #ccc
         position absolute
         left -15px
         top 0

