.screen-all-orders
  height 100vh
  background #F5F5F5;
  overflow hidden
  
  .all-orders-list-item
    width 100%
    padding 0 13px
    height 42px
    display flex
    background #fff
    justify-content space-between
    align-items center
    box-sizing border-box
    font-size 13px
    border-bottom 1px solid #ECECEC
    
    .list-item-lf
      width 100px
      color #000
      font-weight 600
    
    .list-item-rg
      width 220px
      display flex
      justify-content space-between
      align-items center
      font-size 12px
      color #838190
      span
        font-weight 500
      
      .item-rg-main
        display flex
        justify-content space-between
        align-items center
        font-weight 500
        span
          text-align right
          color #FE1530
    
    &:nth-of-type(1){
        margin-top: 10px
      }
               