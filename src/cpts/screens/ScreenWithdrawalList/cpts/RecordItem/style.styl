
.item-wrap
    min-height: 65px
    width: 100%
    box-sizing: border-box
    padding:  0 14px
    background-color #fff
    position relative
    text-align: center

    &:after
        content: ''
        display: block
        width: calc(100% - 28px)
        height: 1px
        background-color #E8E8E8
        position: absolute
        left: 14px
        bottom: 0

     .item-top
        display: flex;
        justify-content: space-between

        .item-left-wrap
            height: 100%
            display: flex
            flex-direction: column
            align-items: flex-start
            justify-content: flex-start

            .item-price
                padding-top: 15px
                font-family: PingFangSC-Semibold, PingFang SC
                font-weight: 600
                color: #FE1530
                font-size 16px

            .item-time 
                padding-top: 10px
                font-size: 11px
                font-family: PingFangSC-Regular, PingFang SC
                font-weight: 400
                color: #838190

        .item-right-wrap
            height: 100%
            display: flex
            flex-direction: column
            align-items: flex-end
            justify-content: flex-start
        
            .item-status
                padding-top: 15px
                font-size: 14px
                font-family: PingFangSC-Regular, PingFang SC
                font-weight: 400

                &.on
                    color: #3A9A27

                &.success

                    color: #FE1300

                &.fail
                    color: #838190
                    
            .item-other
                padding-top: 6px
                font-size: 11px
                font-family: PingFangSC-Regular, PingFang SC
                font-weight: 400
                color: #1676FF

    .detail-wrap
        margin: 5px 0 10px 0
        width: 100%
        height: 34px
        box-sizing: border-box
        padding-right: 13px
        background: #F5F5F5
        text-align: right 
        font-size 11px 
        line-height: 34px
        color: #1676FF;

  
