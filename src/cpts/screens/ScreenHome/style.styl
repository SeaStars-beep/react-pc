.screen-home
  height 100vh
  background #F8F9FA
  overflow auto

  .screen-home-head
    width 100%
    padding 20px 10px 0
    box-sizing: border-box
    display: flex
    align-items: center

    .screen-home-img
      width 60px
      height 60px
      img
        display block
        width 100%
        height 100%
        border-radius: 30px

    h1
      flex: 1
      line-height 16px
      height 16px
      margin-left: 10px
      font-size 16px
      font-weight 600
  
  .screen-home-mid
    display flex
    margin 20px 10px
    align-items center
    justify-content center
    background #1676FF
    border-radius 7px
    box-shadow 0 10px 19px 0 rgba(0, 0, 0, 0.17);
    padding 20px 0

    .iconfont
      font-size 50px
      color #fff
    
    .mid-main
      display flex
      flex-direction column
      align-items center
      width 50%
      position relative
      &:nth-of-type(1)::after
        display: block
        content: ''
        height 50px
        width 2px
        background #fff
        opacity 0.3
        position absolute
        right 0
        top 10px

      span
        font-size 12px
        font-weight 500 
        color #fff

  .screen-home-service
    h1
     font-size: 14px
     margin 26px auto 16px 10px;
     font-weight: 500
  
  .screen-home-grid
    display flex
    flex-wrap wrap
    align-items center
    justify-content space-between
    margin 0 auto
    padding 0 2.5vw

    .screen-home-grid-item
      flex-grow 0
      flex-shrink 0
      width 30vw
      height 30vw
      display flex
      flex-direction column
      align-items center
      background #fff
      justify-content center
      box-shadow 0 2px 12px 0 rgba(0, 0, 0, 0.06);
      border-radius 3px;
      margin-bottom 2.5vw
      div
        width 40px
        height 40px
        margin-bottom 10px
        img
          width 100%
          height 100%
      
      span
        font-size 12px
        font-weight 500
  