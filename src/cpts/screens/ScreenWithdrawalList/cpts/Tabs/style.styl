
.tab-wrap
    width: 100%
    height: 40px
    border-bottom-left-radius: 17px
    border-bottom-right-radius: 17px
    background-color #fff
    display: flex

    .tab-item
        position: relative
        flex: 1
        font-family: PingFangSC-Regular, PingFang SC
        text-align: center

        .tab-txt
            font-size 14px
            color: #323334
            line-height: 40px

        &.tab-active

            .tab-txt
                position relative
                display: inline-block
                color: #1676FF
                
                &:after
                    content: ''
                    position: absolute
                    bottom : 0
                    left: 0
                    width: 100%
                    height: 2px
                    background: #1676FF

